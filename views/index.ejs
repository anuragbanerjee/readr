<% layout('layout') -%>

<script>
  function makeCard(card) {
    // return '<div class="card">a </div>';
    return '<div class="card"> <div class="col-sm-6 col-sm-offset-3" style="border: 1px solid grey; box-shadow: 5px 5px 3px grey; margin-bottom: 20px;"> <div class="card card-block"> <h3 class="card-title">' + card.title +'</h3> <h4 class="card-title">' + card.author +'</h4> <p class="card-text">'+ card.content +'</p> </div> <div class="progress"> <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: '+ card.complete +'%;"> <span class="sr-only">'+ card.complete +'% Complete</span> </div> </div> </div>'

  }

  $("body").ready(function () {
    $.getJSON("/docs", function(data) {
      var all = "";
      for(card in data) {
        all += makeCard(data[card]);
      }
      $("#cardsContainer").html(all);
    });
  });
</script>

<div id="cardsContainer" class="container"></div>
